<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgProfesional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/hello_world"
        android:scaleType="centerCrop"
        android:src="@drawable/mario" />

    <com.chilangolabs.buddis.OwnElements.TextBuddis
        android:id="@+id/txtProfesional"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/imgProfesional"
        android:layout_alignEnd="@+id/imgProfesional"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imgProfesional"
        android:background="@color/black_transparent"
        android:drawableEnd="@drawable/star"
        android:drawableRight="@drawable/star"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="@string/hello_world"
        android:textColor="@color/icons"
        android:textSize="20sp" />

</RelativeLayout>